doctype html
html(lang="en")
    include head/head.pug
    body 
        h1 Products 
        a(href="/photo/add") add 
        table(border="1")
            thead
                tr 
                    th ID 
                    th Title 
                    th Caption
                    th User
                    th imageUrl
                    th Action
            tbody 
            each photo in photos
                tr
                    td #{photo.id}
                    td #{photo.title} 
                    td #{photo.caption}
                    td #{photo.User.username}
                    td 
                        img(src=photo.image_url)
                    td 
                        a(href=`/photo/${photo.id}`) see more
                        a(href=`/photo/edit/${photo.id}`) Edit 
                        a(href=`/photo/delete/${photo.id}`) Delete